    <None Remove="save_2.png" />
    <None Remove="Src\Icons\AppIcon.ico" />
    <None Remove="Src\Icons\AppIcon_32.ico" />
    <None Remove="Src\Icons\github-mark-white.png" />
    <None Remove="Src\Icons\github-mark.png" />
    <None Remove="Src\Icons\github.png" />
    <None Remove="Src\Icons\Hamburger.png" />
    <None Remove="Src\Icons\MainIcon.ico" />
    <None Remove="Src\Icons\MainIcon.png" />
    <None Remove="Src\Icons\MainIcon.svg" />
    <None Remove="Src\Icons\MainIcon_32.ico" />
    <None Remove="Src\Icons\Pause.png" />
    <None Remove="Src\Icons\play-button.png" />
    <None Remove="Src\Icons\Play.png" />
    <None Remove="Src\Icons\Refresh.png" />
    <None Remove="Src\Icons\Save.png" />
    <None Remove="Src\Icons\save_256.png" />
